<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#008975"
    tools:context="com.example.jason.ptosis.Alarm">

    <TextView
        android:id="@+id/alarmMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69sp"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#FFFFFF"
        android:textSize="60sp" />

    <Button
        android:id="@+id/buttonOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonProblem"
        android:layout_alignBottom="@+id/buttonProblem"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/text_view_countdown"
        android:layout_toStartOf="@+id/text_view_countdown"
        android:text="ΟΛΑ ΕΝΤΑΞΕΙ"
        android:textColor="#000000" />

    <Button
        android:id="@+id/buttonProblem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_countdown"
        android:layout_marginTop="73sp"
        android:layout_toEndOf="@+id/text_view_countdown"
        android:layout_toRightOf="@+id/text_view_countdown"
        android:text="ΥΠΑΡΧΕΙ ΠΡΟΒΛΗΜΑ"
        android:textColor="#000000" />

</RelativeLayout>
